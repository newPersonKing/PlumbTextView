<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sayaki="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <cc.sayaki.widget.PlumbTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        sayaki:columnSpacing="20dp"
        sayaki:letterSpacing="10dp"
        sayaki:regex="[，！]"
        sayaki:text="@string/sasayaki_1"
        sayaki:textColor="@color/colorAccent"
        sayaki:textSize="16sp" />
</LinearLayout>