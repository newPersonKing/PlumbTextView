<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sayaki="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <cc.sayaki.widget.PlumbTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sayaki:columnSpacing="20dp"
        sayaki:leftLine="true"
        sayaki:leftLineColor="@color/colorAccent"
        sayaki:leftLinePadding="6dp"
        sayaki:letterSpacing="8dp"
        sayaki:regex="[，！.]"
        sayaki:text="@string/sasayaki_2"
        sayaki:textSize="16sp"
        sayaki:textStyle="normal" />
</LinearLayout>